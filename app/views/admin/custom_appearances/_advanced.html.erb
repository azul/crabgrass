<div class='tab_content tab_area' id="advanced_tab" <%= tab_style 'advanced' %> >
  <% form_for @appearance do |f| %>
    <%= input_selected_tab('advanced') %>
    <h2><%= "Style parameters for custom appearance #{@appearance.id}" %></h2>
      <ol id="ca-instructions">
        <li><%= I18n.t(:click_on) %> <%= link_to 'Available Options', {:action => 'available', :id => @appearance}, :popup => ['Available Custom Appearance Options', 'height=600,width=650,scrollbars=1'] %> <%= I18n.t(:view_custom_names) %> </li>
        <li><%= I18n.t(:copy_paste_option_name) %></li>
        <li><%= I18n.t(:add_colon_after_name) %></li>
        <li><%= I18n.t(:click_update_below) %></li>
      </ol>
    <%= f.text_area :parameters, :size => "60x20", :value => f.object.parameters.to_yaml %>
    <br/>
    <%= submit_tag 'Update' %>
    <%= link_to 'Available Options', {:action => 'available', :id => @appearance}, :popup => ['Available Custom Appearance Options', 'height=600,width=650,scrollbars=1']
     %>
  <% end %>
</div>